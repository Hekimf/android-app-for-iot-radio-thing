<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">


    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/etEndpoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="endpoint" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/etCognitoPoolId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cognito Pool Id"
        app:layout_constraintTop_toBottomOf="@id/etEndpoint" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/etPolicyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Policy Name"
        app:layout_constraintTop_toBottomOf="@id/etCognitoPoolId" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/etTopicName"
        android:layout_width="match_parent"
        android:hint="topic name"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etPolicyName" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/varela_round"
        android:paddingBottom="16dp"
        android:text="status"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/btnConnect"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/varela_round"
        android:text="Connect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>